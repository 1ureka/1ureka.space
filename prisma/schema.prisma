datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ImageMetadata {
  id          String      @id @default(cuid())
  category    String
  group       String
  name        String
  thumbnail   Thumbnail?   
  origin      Origin?
  deletedAt   DateTime?
}

model Thumbnail {
  id          String         @id @default(cuid())
  bytes       Bytes
  metadata    ImageMetadata  @relation(fields: [metadataId], references: [id], onDelete: Cascade)
  metadataId  String         @unique
}

model Origin {
  id          String      @id @default(cuid())
  bytes       Bytes
  metadata    ImageMetadata  @relation(fields: [metadataId], references: [id], onDelete: Cascade)
  metadataId  String         @unique
}

